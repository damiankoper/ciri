{
  "root": "apps/web",
  "projectType": "application",
  "sourceRoot": "apps/web/src",
  "targets": {
    "build": {
      "executor": "@wanews/nx-vite:build",
      "options": {}
    },
    "serve": {
      "executor": "@wanews/nx-vite:serve",
      "options": {}
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/web/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx vitest --run",
        "cwd": "apps/web"
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "cd apps/web ; npx vite build --base=/ciri/ --emptyOutDir",
          "git subtree push --prefix dist/web origin gh-pages"
        ]
      }
    }
  },
  "tags": []
}
